<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800"
            style="-fx-background-color: linear-gradient(to right, #141e30, #243b55);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.projetdemargement.controllers.GestionnaireController">

 <VBox alignment="CENTER" spacing="20"
       AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
       style="-fx-padding: 30px;">

  <Label text="📊 Tableau de Bord - Gestionnaire"
         style="-fx-font-size: 26px; -fx-text-fill: #f1c40f; -fx-font-weight: bold;" />

  <Label fx:id="welcomeLabel" text="Bienvenue Gestionnaire !"
         style="-fx-font-size: 16px; -fx-text-fill: white;" />

  <Button fx:id="manageRoomsButton" text="🏫 Gérer les Salles"
          style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="240" prefHeight="45"/>

  <Button fx:id="manageCoursesButton" text="📚 Gestion des Cours"
          style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="240" prefHeight="45"/>

  <Button fx:id="assignCoursesButton" text="👨‍🏫 Voir les Cours"
          style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="240" prefHeight="45"/>

  <Button fx:id="logoutButton" text="🚪 Déconnexion"
          style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="240" prefHeight="45"/>
 </VBox>
</AnchorPane>
